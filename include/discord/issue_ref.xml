<?xml version="1.0" encoding="utf-8"?>
<limbo>
  <discord>
    <github-issue-ref>
      <search pattern="~([a-zA-Z0-9]{1,})-([0-9]{1,})">
        <repositories>
          <repository id="mcpbot-issues"/>
          <repository id="paper"/>
          <repository id="spongeapi"/>
          <repository id="spongeapi"/>
          <repository id="spongedocs"/>
          <repository id="spongeforge"/>
          <repository id="spongevanilla"/>
        </repositories>
      </search>

      <state>
        <open>
          <message>
            <embed color="#58c858">
              <title>${tag}-${number}: ${title}</title>
              <url>${url}</url>
              <description>${body}</description>
              <footer>
                <text>State: open | Author: ${author}</text>
              </footer>
            </embed>
          </message>
        </open>

        <closed>
          <message>
            <embed color="#c85858">
              <title>${tag}-${number}: ${title}</title>
              <url>${url}</url>
              <description>${body}</description>
              <footer>
                <text>State: closed | Author: ${author}</text>
              </footer>
            </embed>
          </message>
        </closed>

        <merged>
          <message>
            <embed color="#9058c8">
              <title>${tag}-${number}: ${title}</title>
              <url>${url}</url>
              <description>${body}</description>
              <footer>
                <text>State: merged | Author: ${author}</text>
              </footer>
            </embed>
          </message>
        </merged>
      </state>
    </github-issue-ref>
  </discord>
</limbo>