<?xml version="1.0" encoding="utf-8"?>
<limbo>
  <github>
    <apply>
      <apply>
        <filter>
          <ref id="ore"/>
        </filter>

        <actions>
          <!-- all new issues require triage -->
          <trigger>
            <filter id="pr-o-ns"/>

            <action>
              <label>
                <add>status: in progress</add>
              </label>
            </action>
          </trigger>
        </actions>
      </apply>
      <apply>
        <filter>
          <any>
            <ref id="spongeapi"/>
            <ref id="spongecommon"/>
            <ref id="spongeforge"/>
            <ref id="spongevanilla"/>
          </any>
        </filter>

        <actions>
          <!-- all new issues require triage -->
          <trigger>
            <filter id="is-o-ns"/>

            <action>
              <label>
                <add>status: needs triage</add>
              </label>
            </action>
          </trigger>

          <trigger>
            <filter>
              <any>
                <!-- auto-remove the triage label when someone, other than the bot, applies labels -->
                <all>
                  <filter id="not-self"/>
                  <any>
                    <event>issue label</event>
                    <event>pull request label</event>
                  </any>
                </all>
                <!-- auto-remove the triage label when a close happens -->
                <all>
                  <any>
                    <event>issue close</event>
                    <event>pull request close</event>
                  </any>
                </all>
              </any>
            </filter>

            <action>
              <label>
                <remove>status: needs triage</remove>
              </label>
            </action>
          </trigger>

          <!-- automatically apply the 'status: wip' label if '[wip]' is detected at the beginning of the title -->
          <pattern type="find" pattern="\[wip\]" scope="title">
            <filter id="pr-o-ns"/>

            <action>
              <label>
                <add>status: wip</add>
              </label>
            </action>
          </pattern>

          <!-- search for a version -->
          <pattern type="where" pattern="(?:(\d+\.\d+(?:\.\d+))-)(\d+)?-?(\d+\.\d+(?:\.\d+)?(?:-[A-Z]*))-?(\d+)">
            <filter id="is-o-ns"/>

            <where group="1">
              <match>
                <value>1.10</value>
                <value>1.10.2</value>

                <apply close="true">
                  <comment src="issue/close/unsupported_version.md">
                    <tokens>
                      <token name="version" value="1.10"/>
                      <token name="version_end" value="in January 2018"/>
                    </tokens>
                  </comment>
                  <label>
                    <add>resolution: unsupported</add>
                    <remove>status: needs triage</remove>
                    <add>version: 1.10 (u)</add>
                  </label>
                </apply>
              </match>

              <match>
                <value>1.11</value>
                <value>1.11.2</value>

                <apply close="true">
                  <comment src="issue/close/unsupported_version.md">
                    <tokens>
                      <token name="version" value="1.11"/>
                      <token name="version_end" value="in January 2018"/>
                    </tokens>
                  </comment>
                  <label>
                    <add>resolution: unsupported</add>
                    <remove>status: needs triage</remove>
                    <add>version: 1.11 (u)</add>
                  </label>
                </apply>
              </match>

              <match>
                <value>1.12</value>
                <value>1.12.2</value>

                <apply>
                  <label>
                    <add>version: 1.12</add>
                  </label>
                </apply>
              </match>
            </where>
            <where group="3">
              <match>
                <value>8.0.0-BETA</value>

                <apply>
                  <label>
                    <add>branch: bleeding</add>
                  </label>
                </apply>
              </match>
            </where>
          </pattern>

          <command command="~wip">
            <filter id="pr-co-ac"/>

            <action>
              <label>
                <add>status: wip</add>
                <remove>status: needs review</remove>
                <remove>status: needs testing</remove>
                <remove>status: ready to merge</remove>
              </label>
            </action>
          </command>

          <command command="~qa">
            <filter id="pr-co-ac"/>

            <action>
              <label>
                <add>status: needs review</add>
                <add>status: needs testing</add>
                <remove>status: ready to merge</remove>
                <remove>status: wip</remove>
              </label>
            </action>
          </command>

          <command command="~tested">
            <filter id="pr-c-c"/>

            <action>
              <label>
                <remove>status: needs testing</remove>
                <remove>status: wip</remove>
              </label>
            </action>
          </command>

          <command command="~reviewed">
            <filter id="pr-c-c"/>

            <action>
              <label>
                <remove>status: needs review</remove>
                <remove>status: wip</remove>
              </label>
            </action>
          </command>

          <command command="~ready">
            <filter id="pr-c-c"/>

            <action>
              <label>
                <add>status: ready to merge</add>
                <remove>status: needs testing</remove>
                <remove>status: needs review</remove>
                <remove>status: wip</remove>
              </label>
            </action>
          </command>
        </actions>
      </apply>
    </apply>
  </github>
</limbo>