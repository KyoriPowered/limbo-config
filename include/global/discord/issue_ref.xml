<?xml version="1.0" encoding="utf-8"?>
<limbo>
  <discord>
    <github-issue-ref>
      <search pattern="~([a-zA-Z0-9]{1,})-([0-9]{1,})">
        <repositories>
          <repository id="mcmmo"/>
          <repository id="mcpbot-issues"/>
          <repository id="paper"/>
          <repository id="spongeapi"/>
          <repository id="spongecommon"/>
          <repository id="spongedocs"/>
          <repository id="spongeforge"/>
          <repository id="spongevanilla"/>
        </repositories>

        <filter>
          <any>
            <all>
              <guild>526933440214597677</guild> <!-- mcMMO -->
              <ref id="mcmmo"/>
            </all>
            <all>
              <guild>484456079716122637</guild> <!-- MCP Bot -->
              <ref id="mcpbot-issues"/>
            </all>
            <all>
              <guild>289587909051416579</guild> <!-- PaperMC -->
              <ref id="paper"/>
            </all>
            <all>
              <guild>142425412096491520</guild> <!-- SpongePowered -->
              <any>
                <ref id="spongeapi"/>
                <ref id="spongecommon"/>
                <ref id="spongedocs"/>
                <ref id="spongeforge"/>
                <ref id="spongevanilla"/>
              </any>
            </all>
          </any>
        </filter>
      </search>

      <state>
        <open>
          <message>
            <embed color="#58c858">
              <title>${tag}-${number}: ${title}</title>
              <url>${url}</url>
              <description>${body}</description>
              <footer>
                <text>State: open | Author: ${author}</text>
              </footer>
            </embed>
          </message>
        </open>

        <closed>
          <message>
            <embed color="#c85858">
              <title>${tag}-${number}: ${title}</title>
              <url>${url}</url>
              <description>${body}</description>
              <footer>
                <text>State: closed | Author: ${author}</text>
              </footer>
            </embed>
          </message>
        </closed>

        <merged>
          <message>
            <embed color="#9058c8">
              <title>${tag}-${number}: ${title}</title>
              <url>${url}</url>
              <description>${body}</description>
              <footer>
                <text>State: merged | Author: ${author}</text>
              </footer>
            </embed>
          </message>
        </merged>
      </state>
    </github-issue-ref>
  </discord>
</limbo>